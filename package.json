{
  "name": "assertron",
  "version": "0.0.0-development",
  "description": "A supplementary assertion library",
  "homepage": "https://github.com/unional/assertron",
  "bugs": {
    "url": "https://github.com/unional/assertron/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/assertron.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong",
    "email": "homawong@gmail.com"
  },
  "sideEffects": false,
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "jsnext:main": "esm/index.js",
  "browser": {
    "perf_hooks": false
  },
  "typings": "cjs/index.d.ts",
  "files": [
    "cjs",
    "esm",
    "src"
  ],
  "scripts": {
    "build": "yarn build:esm && yarn build:cjs",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:watch": "tsc --watch",
    "clean": "rimraf .nyc_output .ts coverage cjs esm lib libm",
    "coverage": "jest --coverage",
    "depcheck": "yarn dependency-check",
    "dependency-check": "dependency-check . --unused --no-dev -i type-plus -i global-store -i @types/node -i standard-log-color && dependency-check . --missing --no-dev",
    "lint": "eslint --ext=js,ts .",
    "nuke": "yarn clean && rimraf node_modules",
    "test": "jest",
    "test:watch": "jest --watch",
    "verify": "yarn lint && yarn build && yarn dependency-check && yarn coverage",
    "watch": "yarn test:watch"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "is-node": "^1.0.2",
    "is-promise": "^4.0.0",
    "iso-error": "^4.1.0",
    "path-equal": "^1.1.1",
    "satisfier": "^5.1.1",
    "tersify": "^3.7.9",
    "tslib": "^2.3.1",
    "type-plus": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.16.5",
    "@babel/plugin-proposal-optional-chaining": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@commitlint/cli": "^16.0.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/jest": "^27.0.3",
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "babel-jest": "^27.4.5",
    "dependency-check": "^4.1.0",
    "eslint": "^8.5.0",
    "eslint-plugin-harmony": "^6.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "jest-junit": "^13.0.0",
    "jest-progress-tracker": "^3.0.1",
    "jest-validate": "^27.4.2",
    "jest-watch-repeat": "^2.0.0",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^2.0.1",
    "jest-watch-typeahead": "^1.0.0",
    "node-supported-releases": "^0.0.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4",
    "update-notifier": "^5.1.0"
  }
}
